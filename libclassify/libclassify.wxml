<!--pages/libclassify/libclassify.wxml-->
<view class="libs">
    <nav-top libss="{{libss}}">
        选择图书馆
    </nav-top>
    <view>
    {{list}}
    </view>
    <view class="libarys">
        <radio-group>
        <view wx:for="{{arr}}" wx:key="index" class="details">
            {{item.name}}-     
            <label>
                <radio class="radios" color="#007aff" value="{{item.name}}" wx:for="{{item.libs}}" wx:for-item="items" wx:key="indexs" wx:key-index="indexs"
                bindtap="ok"  data-lib="{{items.name}}"
                >
                    {{items.name}}
                </radio>
            </label>
        </view>
    </radio-group>
    </view>
</view>