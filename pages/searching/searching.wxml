<!--pages/searching/searching.wxml-->
<navs list="{{libName}}">书目查询</navs>
<view class="searching">
  <input type="text" bindchange="getword" class="ipt" placeholder="请输入检索词" />
  <image class="searpic" bindtap="geticon" src="../../img/search.png"></image>
  <view class="text">
    <text>(简单检索默认与“前方一致”匹配)</text>
    <text class="tall" bindtap="advancedSearch">高级检索</text>
  </view>
  <books books="{{books}}"></books>
</view>