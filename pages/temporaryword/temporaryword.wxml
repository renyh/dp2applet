<!--pages/temporaryword/temporaryword.wxml-->
<navs id="getActivelib">找回密码</navs>
<view class="list">
  <van-cell-group inset>
   <view class="libNames">
    <van-field v-model="value" label="图书馆" placeholder="{{libNames}}" placeholder-style="color:#000" readonly />
    <van-button class="dot" icon="weapp-nav.path" bindtap="skip"></van-button>
   </view>
    <van-field v-model="value1" bindchange="getName" label="姓名" placeholder="请输入姓名" />
    <van-field v-model="value2" bindchange="getIphone" label="手机号" placeholder="请输入手机号" />
  </van-cell-group>
  <view class="alert">
  <text>（注：请您确保已经在图书馆登记过手机号,才能正常使用找回密码功能。）</text>
  </view>
  <button class="temporaryCode" bindtap="getPoCode">获取临时密码</button>
</view>
<view class="login" wx:if="{{flag}}">
    <input class="ipts" bindchange="getchange" placeholder="请输入临时密码" type="text" />
    <button class="enter" bindtap="bind_click">绑定</button>
</view>
<bottonav></bottonav>